<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="10dp"
    android:background="#47D4DA"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="154dp"
        android:layout_height="110dp"
        android:layout_gravity="start"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:layout_marginStart="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:fontFamily="@font/convergence"
            android:text="@string/nome_do_paciente"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/recy_paciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/txt_arredondado"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:maxLines="2"
            android:text="Italo Luis" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/convergence"
            android:text="Endereço"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/recy_endereco"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/txt_arredondado"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:text="Endereço completo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="166dp"
        android:layout_height="110dp"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/convergence"
            android:text="Motivo"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/recy_motivo"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/txt_arredondado"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:text="Rotina" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/convergence"
            android:text="Turno"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/recy_turno"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/txt_arredondado"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:text="Turno" />

        <!--bloco de três-->

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/ic_maps"
        tools:ignore="VectorDrawableCompat" />

</androidx.cardview.widget.CardView>