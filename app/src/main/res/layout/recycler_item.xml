<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#47D4DA"
    app:cardElevation="5dp"
    android:layout_margin="10dp"

    >

    <LinearLayout
        android:layout_width="166dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Data"
            android:textSize="10dp"
            android:fontFamily="@font/convergence"/>

        <!--bloco de três-->

        <TextView
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/arredondado"
            android:gravity="center"
            android:text="Data"
            android:id="@+id/recy_data"
            android:fontFamily="@font/convergence"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Turno"
            android:textSize="10dp"
            android:fontFamily="@font/convergence"/>

        <TextView
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/arredondado"
            android:gravity="center"
            android:text="Turno"
            android:id="@+id/recy_turno"
            android:fontFamily="@font/convergence"/>

        <!--bloco de três-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="153dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do paciente"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="10dp"
            android:fontFamily="@font/convergence"/>

        <TextView
            android:fontFamily="@font/convergence"
            android:id="@+id/recy_paciente"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/arredondado"
            android:text="Italo Luis"
            android:gravity="center"/>

        <TextView
            android:fontFamily="@font/convergence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motivo"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="10dp"/>

        <TextView
            android:fontFamily="@font/convergence"
            android:id="@+id/recy_motivo"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/arredondado"
            android:text="Rotina"
            android:gravity="center"/>


    </LinearLayout>

</android.support.v7.widget.CardView>