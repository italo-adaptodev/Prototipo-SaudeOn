<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="10dp"
    android:background="#47D4DA"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="166dp"
        android:layout_height="110dp"
        android:layout_gravity="left"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:layout_marginLeft="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/convergence"
            android:text="Nome do paciente"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/recy_paciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:autoSizeTextType="uniform"
            android:maxLines="2"
            android:background="@drawable/txt_arredondado"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:text="Italo Luis" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/convergence"
            android:text="Endereço"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/recy_endereco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/txt_arredondado"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:text="Endereço completo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="166dp"
        android:layout_height="110dp"
        android:layout_gravity="right"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/convergence"
            android:text="Motivo"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/recy_motivo"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/txt_arredondado"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:text="Rotina" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/convergence"
            android:text="Turno"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/recy_turno"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/txt_arredondado"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:text="Turno" />

        <!--bloco de três-->

    </LinearLayout>

</android.support.v7.widget.CardView>