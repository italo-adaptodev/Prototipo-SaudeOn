<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:background="#47D4DA"
    app:cardElevation="5dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Remedio"
        android:id="@+id/remedio_nome"
        android:layout_gravity="center"
        android:gravity="center|top"
        android:layout_marginTop="5dp"
        android:layout_marginStart="25dp"
        android:textSize="20dp"
        android:layout_marginLeft="20dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="212dp"
        android:layout_height="110dp"
        android:layout_gravity="start"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="Dose"
            android:textSize="12sp"
            app:fontFamily="@font/convergence"
            app:layout_constraintBottom_toTopOf="@+id/recy_dose"
            app:layout_constraintEnd_toEndOf="@+id/recy_dose"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="@+id/recy_dose"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/recy_dose"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/txt_arredondado"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:maxLines="2"
            android:text="Dose x"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Via"
            android:textSize="12sp"
            app:fontFamily="@font/convergence"
            app:layout_constraintBottom_toTopOf="@+id/recy_via"
            app:layout_constraintEnd_toEndOf="@+id/recy_via"
            app:layout_constraintStart_toStartOf="@+id/recy_via"
            app:layout_constraintTop_toBottomOf="@+id/recy_dose" />

        <TextView
            android:id="@+id/recy_via"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/txt_arredondado"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:text="Intravenosa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/recy_dose"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/recy_dose"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:targetApi="o" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="166dp"
        android:layout_height="110dp"
        android:layout_gravity="end"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/txt_motivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:text="Intervalo"
            android:textSize="12sp"
            app:fontFamily="@font/convergence"
            app:layout_constraintBottom_toTopOf="@+id/recy_intervalo"
            app:layout_constraintEnd_toEndOf="@+id/recy_intervalo"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="@+id/recy_intervalo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/recy_intervalo"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/txt_arredondado"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:maxLines="2"
            android:text="X horas"
            app:layout_constraintBottom_toTopOf="@+id/txt_turno"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_motivo" />

        <TextView
            android:id="@+id/txt_turno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Quantidade/dose"
            android:textSize="12sp"
            app:fontFamily="@font/convergence"
            app:layout_constraintBottom_toTopOf="@+id/recy_qtdDose"
            app:layout_constraintEnd_toEndOf="@+id/recy_qtdDose"
            app:layout_constraintStart_toStartOf="@+id/recy_qtdDose"
            app:layout_constraintTop_toBottomOf="@+id/recy_intervalo" />

        <TextView
            android:id="@+id/recy_qtdDose"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/txt_arredondado"
            android:fontFamily="@font/convergence"
            android:gravity="center"
            android:text="200mg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/recy_intervalo"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/recy_intervalo"
            app:layout_constraintTop_toBottomOf="@+id/txt_turno"
            tools:targetApi="o" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>